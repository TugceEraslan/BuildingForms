@model IEnumerable<Product>            
                             @*IEnumerable tipinde ve Product tan oluşan bir model nesnesi oluşturduk. Product dışardan bir liste bekliyor.  *@
@{
    ViewData["Title"] = "Index";
}

<h2>Product List</h2>
<br />
<div class="container m-4">
    <table class="table table-sm table-bordered">
        <thead class="bg-primary text-white">
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>IsApproved</th>
                <th></th>
            </tr>

        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>

                        @if (item.IsApproved)
                        {
                            <span class="badge badge-pill badge-success">Onaylı</span>
                        }
                        else
                        {
                           <span class="badge badge-pill badge-danger">Onay Bekliyor</span>
                        }

                    </td>
                    <td>
                        <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id">
                            Update
                        </a>
                        <!--btn-sm yazmamızın sebebi butonun daha küçük olmasını istiyorsak yaparız.-->
                    </td>

                </tr>
            }

        </tbody>


    </table>

    <a class="btn btn-primary" asp-controller="Home" asp-action="Create">
        Create
    </a>
</div>

