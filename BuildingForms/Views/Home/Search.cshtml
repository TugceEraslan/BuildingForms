@using BuildingForms.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers



@{
    ViewData["Title"] = "Search";
}

<div class="container m-4">
    <h2>Search</h2>
</div>
<br />

<div class="container m-4">
    <form action="/Home/Search" method="get">  @*Search te arama yapabilmek için burdaki bilgiyi controller a taşımak gerekiyor. q bilgisini taşıdık.*@

        <div class="form-group">
            <label for="q">Keyword</label>
            <input type="text" name="q" id="q" class="form-control" />
        </div>
        <input type="submit" value="Submit" class="btn btn-primary" />  @* Formu server a gönderecek olan bir submit butonu ekledik *@

    </form>
</div>


