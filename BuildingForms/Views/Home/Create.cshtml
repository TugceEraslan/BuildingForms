@model Product
@{
    ViewData["Title"] = "Create";
}
<div class="container m-4">
    <h2>Create</h2>
</div>

<div class="container m-4">
    <form asp-controller="Home" asp-action="Create" method="post">

        <div class="form-group">
            <label for="Name">Name</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Name">Description</label>
            <input asp-for="Description" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Name">Price</label>
            <input asp-for="Price" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Category">Category</label>
            <select asp-for="Category" asp-items="@new SelectList(Enum.GetNames(typeof(EnumCategories)))" class="form-control">
                <option selected disabled>Select Category</option>
            </select>  @*Tag helper özelliklerinden asp-items ve SelectList ten faydalandım.Enum içerisindeki olaylar SelectList içerisinde oluşuyor *@
        </div>
        <div class="form-check">
            <input class="form-check-input" asp-for="IsApproved">
            <label class="form-check-label" for="defaultCheck1">
                IsApproved
            </label>
        </div>

        <input type="submit" value="Submit" class="btn btn-primary" />

    </form>
</div>
